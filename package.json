 "scripts": {
  "configure-env": "./configure-env.sh",
  "android": "npx react-native run-android --active-arch-only",
  "ios": "npx react-native run-ios",
  "start": "react-native start --reset-cache",
  "setup": "npm install && cd ios && pod install",
  "husky:setup": "npx husky-init && npm run husky:commit:lint && npm run husky:prettier && npm run husky:lint",
  "husky:commit:lint": "npx husky add .husky/commit-msg 'npx --no-install commit:lint --edit'",
  "husky:prettier": "npx husky set .husky/pre-commit 'npm run prettier'",
  "husky:lint": "npx husky add .husky/pre-commit 'npm run lint'",
  "clean": "npm run project:clean:npm; npm run project:clean:ios; npm run project:clean:android",
  "project:clean:npm": "unlink package-lock.json; rm -rf node_modules/;",
  "project:clean:setup:npm": "unlink package-lock.json; rm -rf node_modules/; npm run setup",
  "project:clean:android": "cd android;  rm -rf .gradle ;rm -rf .idea: rm -rf build",
  "project:clean:ios": "cd ios; unlink Podfile.lock; rm -rf Pods/",
  "project:clean": "unlink package-lock.json; rm -rf node_modules/; cd ios; unlink Podfile.lock; rm -rf Pods/",
  "project:setup": "npm i; npm run project:setup:ios",
  "project:clean:setup": "npm run project:clean:setup:npm; npm run project:setup:ios",
  "release:android": "cd android && ./gradlew assembleRelease",
  "release:play": "cd android && ./gradlew bundleRelease",
  "test:apk": "react-native run-android --variant=release",
  "prettier": "cd src && npx prettier --write . && git add .",
  "postinstall": "husky install && chmod ug+x .husky/*  ",
  "test": "jest",
  "lint:fix": "eslint . --fix --ext .js,.jsx,.ts,.tsx",
  "lint": "npm run lint:fix && eslint . --ext .ts,.tsx --ignore-path .eslintignore",
  "format": "prettier --write   \"src/**/*.{ts,tsx}\" --config .prettierrc",
  "prepare": "husky install"
 },
 "engine": {
  "node": "16.10.0",
  "npm": "7.21.0"
 },
 "resolutions": {
  "@types/react": "17"
 },
 "jest": {
  "preset": "react-native",
  "moduleFileExtensions": [
   "ts",
   "tsx",
   "js",
   "jsx",
   "json",
   "node"
  ]
 }
}
